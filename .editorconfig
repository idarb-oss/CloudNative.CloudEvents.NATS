# editorconfig.org
root = true

[*]
indent_size = 4
indent_style = space
tab_width = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{lock,sh}]
end_of_line = lf

[*.sln]
indent_style = tab

[*.{xml,csproj}]
indent_size = 2